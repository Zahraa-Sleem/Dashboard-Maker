<link rel="stylesheet" href="~/css/sideBar.css" />

<div class="sidebar">
	<a class="active" href="#">Dashboard Maker</a>
	<a href="#">Dashboards</a>
	<select id="dropdownMenu"></select>
	<a href="/Dashboard/Create">New Dashboard</a>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        fetch('/api/Dashboard/GetUserDashboards')
            .then(response => {
                return response.json();
            })
            .then(data => {
                populateDropdown(data);
            })
            .catch(error => {
                console.error('Error fetching data:', error);
            });
    });

    function populateDropdown(data) {
        const dropdown = document.getElementById('dropdownMenu');
        data.forEach(item => {
            // Ensure that 'Title' is the text and 'Id' is the value
            const option = new Option(item.title, item.id);
            dropdown.add(option);
        });
    }
</script>



